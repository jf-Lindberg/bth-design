{% include 'incl/header.twig' %}

<body>
	{% include 'incl/nav.twig' %}
	<div class="main landing-page" role="main">
		{{ content }}
		{% for page in pages("technology")|reverse if not page.hidden %}
			
			<a href="{{ page.url }}">
			<div class="box">
				<h2>
					{{ page.title }}
				</h2>
				<p class="excerpt">{{ page.description }}</p>
			</div>
			</a>
		{% endfor %}
	</div>

	{% include 'incl/footer.twig' %}
</body>
</html>
